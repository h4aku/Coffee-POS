<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-..." crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/open-iconic@1.1.1/font/css/open-iconic-bootstrap.min.css" rel="stylesheet">
</head>
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/order"><span class="oi oi-lightbulb" /> Bislerium Coffee</a>
    </div>
</div>

<!-- Checkbox for navigation menu -->
<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" style="background-color: black;">
    <!-- Navigation menu -->
    <nav class="flex-column">
        <div class="nav-item px-3"><h5 class="text-light"><strong>@Username</strong></h5></div>
        @if (UserRole == Role.Admin)
        {
            <!-- Display users link for admin -->
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="users">
                    <span class="oi oi-people" /> &nbsp; Users
                </NavLink>
            </div>

            <!-- Display products link for admin -->
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="products">
                    <span class="oi oi-box" /> &nbsp; Products
                </NavLink>
            </div>
        }

        <!-- Display order link for all users -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="order">
                <span class="oi oi-cart" /> &nbsp; Order
            </NavLink>
        </div>

        <!-- Display order details link for all users -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="orderHistoryDetails">
                <span class="oi oi-document" /> &nbsp; Order Details
            </NavLink>
        </div>

        <!-- Display generate PDF link for all users -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="pdf">
                <span class="oi oi-document" /> &nbsp; Generate PDF
            </NavLink>
        </div>

        <!-- Logout link -->
        <div class="nav-item px-3">
            <NavLink class="nav-link text-danger" role="button" @onclick="LogoutHandler">
                <span class="oi oi-account-logout" /> &nbsp; Logout
            </NavLink>
        </div>
    </nav>
</div>

@code {
    [Parameter]
    public string Username { get; set; }
    [Parameter]
    public Role UserRole { get; set; }
    [Parameter]
    public EventCallback LogoutHandler { get; set; }
}